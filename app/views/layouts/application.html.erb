<!DOCTYPE html>
<html>
  <head>
    <title>Licoin</title>
    <%= csrf_meta_tags %>
<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
	<a href="/" class="navbar-brand">Li Coin</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar3">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse" id="navbar3">
        <ul class="navbar-nav">
            <% if user_signed_in? %>
  				<li class="nav-item">
  					<%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  				</li>
  				<li class="nav-item">
  					<%= link_to "Profile", edit_user_registration_path(current_user) %>        
  				</li>
			<% end %>
        </ul>
    </div>
</nav>


<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <%= yield %>
  </body>
</html>
