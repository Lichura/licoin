


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="hero">
<div class="container">
                <div class="row">
                    <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12">
                        <div class="card border-none">
                            <div class="card-block">
                                <div class="mt-2 text-center">
                                    <h2>Login</h2>
                                </div>
                                <p class="mt-4 text-white lead text-center">
                                    Enter your credentials
                                </p>
                                <div class="mt-4">
                                    <form>
                                        <div class="form-group">
                                        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email address" %>
                                        </div>
                                        <div class="form-group">
                                            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
                                        </div>
                                        <div class="form-group">
                                             <% if devise_mapping.rememberable? -%>
    											<div class="field">
      											<%= f.check_box :remember_me %>
      											<%= f.label :remember_me %>
										    </div>
										  <% end -%>
                                        </div>
                                        <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
                                    </form>
                                    <div class="clearfix"></div>
                                    <p class="content-divider center mt-4"><span>or</span></p>
                                </div>
                                <% end %>
                                <p class="text-center">
                                	<%= link_to "Sign up", new_user_registration_path, class:"btn btn-default btn-block" %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</section>




